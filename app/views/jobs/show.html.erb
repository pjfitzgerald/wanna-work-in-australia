
<div class="container">
  <div class="card-job-show">
    <h1><%= @job.title %></h1>
    <h3><%= @job.description %></h3>

    <% if user_signed_in? %>
      <%= link_to "Click here to apply for this job", new_venue_job_application_path(@venue, @job), class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Sign up to apply for this job", new_user_registration_path, class: "btn btn-primary" %>
    <% end %>

    <br>
    <br>
    <br>
    <br>

    <%= link_to "Back to venue", venue_path(@venue), class: "btn btn-secondary" %>
  </div>
</div>
