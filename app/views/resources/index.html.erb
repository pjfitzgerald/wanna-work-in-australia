

<div class="container">
  <h1 style="text-align:center; margin-top:10px">Resources</h1>
  <div class="row row-cols-3">
    <% @resources.each do |resource| %>
      <%= link_to resource_path(resource), class: "a-primary" do %>
        <div class="card-resource-index">
          <img src="https://res.cloudinary.com/dkowfxwpp/image/upload/v1582099727/wwia/GettingOnTheRoad_01_e1thi6.jpg"/>
          <div class="card-resource-index-infos">
            <div>
              <h2><%= resource.title %></h2>
              <p><%= resource.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>  
  </div>
</div>


