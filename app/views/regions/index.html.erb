
<div class="container">
  <div class="row row-cols-3">
    <% @regions.each do |region| %>
      <%= link_to region_path(region), class: "a-primary" do %>
        <div class="card-trip">
          <%= image_tag "#{region.banner}", src: 'Image Not Found' %>
          <div class="card-trip-infos">
            <div>
              <h2><%= region.name %></h2>
              <p><%= region.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>  
  </div>
</div>


