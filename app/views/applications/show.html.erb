    <strong>Length of Stay: </strong><%= @application.length_of_stay %>
    <br><br>
    <strong>Country of Origin: </strong><%= @application.country_name %>
    <br><br>
    <strong>Content: </strong><%= @application.content %>
    <br><br>

    <% if @application.resume.attached? %>
      <%= link_to "Download your submitted resume", @application.resume, disposition: "attachment" %>
