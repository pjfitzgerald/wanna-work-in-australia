    <strong>Venue: </strong><%= @application.job.venue.name %>
    <br>
    <strong>Job Title: </strong><%= @application.job.title %>
    <br>
    <strong>Job Description: </strong><%= @application.job.description %>
    <br>
    <% if @application.resume.attached? %>
      <%= link_to "Download resume", @application.resume, disposition: "attachment" %>
    <% end %>

