<div class="navbar navbar-expand-sm navbar-light navbar-wwia fixed-top">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dkowfxwpp/image/upload/v1579755994/wwia/wwia_logo_llpv0y.png" %>
  <% end %>

    <h2 class=""></h2>

  <button class="navbar-toggler btn-primary" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-button active">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-button dropdown ml-2">
          <% if current_user.profile_image.attached? %>
            <%= image_tag current_user.profile_image, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "default_user_image.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Search", search_path, class: "dropdown-item" %>
            <%= link_to "Applications", user_applications_path(current_user), class: "dropdown-item" %>
            <%= link_to "Venues", venues_path, class: "dropdown-item" %>
            <%= link_to "Regions", regions_path, class: "dropdown-item" %>
            <%= link_to "Resources", resources_path, class: "dropdown-item" %>
            <%= link_to "Settings", settings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<script>
  const initUpdateNavbarOnScroll = () => {
    const navbar = document.querySelector('.navbar-wwia');
    const map = document.getElementById('map');
    if (navbar) {
      window.addEventListener('scroll', () => {
        if (window.scrollY >= 285) {
          navbar.classList.add('navbar-wwia-border-bottom');
        } else {
          navbar.classList.remove('navbar-wwia-border-bottom');
        }
      });
    }
  }

  initUpdateNavbarOnScroll();

</script>
